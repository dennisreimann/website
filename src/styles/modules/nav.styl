navItemActive(current = false)
  if current
    border-top-color $color-highlight
  color $color-darkblue
  background #fff
  text-decoration none

.nav
  display flex
  justify-content flex-start
  align-content stretch
  align-items flex-end
  list-style none
  margin-left $space-large * -1
  margin-right $space-large * -1

  @media print
    display none

  &__item
    flex 0 auto

    @media up_to_M
      font-size $font-size-small

      &--elm
      &--projects
        display none

    &__link
      display block
      padding $space-normal $space-large
      color inherit
      text-decoration none
      border-top 4px solid $color-darkblue
      &:hover
        navItemActive(false)
      .nav__item--current &
        navItemActive(true)
